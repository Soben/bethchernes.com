	<body class="{{body_class}}">
    <a class="sr-only sr-only-focusable" href="#content">Skip to content</a>
		
		<nav class="navbar navbar-expand-lg layout-header sticky-top">
			<div class="container">
				<a class="navbar-brand" href="{{ site.home_url }}"><img src="{{ logo.src }}" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle Navigation">
					<svg viewBox="0 0 100 80" width="30" height="30">
						<rect width="100" height="10"></rect>
						<rect y="30" width="100" height="10"></rect>
						<rect y="60" width="100" height="10"></rect>
					</svg>
				</button>
				<div class="collapse navbar-collapse justify-content-end">
					<ul class="navbar-nav">
						{% for item in menu.items %}
							<li class="nav-item {{ item.classes|join(' ') }}">
								<a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</nav>

		<section class="masthead d-flex justify-content-center align-items-center">     
      <div class="wrapper">
				<h1>{{ header }}</h1>
				{% if subheader %}
					<p class="subheader highlight">{{ subheader }}</p>
				{% endif %}

				{% block masthead %}
				{% endblock %}
			</div>
		</section>

		<section id="content" role="main" class="content-wrapper">      
      <div class="container">
				{% block content %}
					<p>Sorry, no content.</p>
				{% endblock %}
      </div>
      
    </section>
    
    <footer class="layout-footer">
			<div class="wrapper">
				&copy; {{ "now"|date('Y') }} {{ copyright }}
			</div>
    </footer>

    {{ function('wp_footer') }}

	</body>
</html>