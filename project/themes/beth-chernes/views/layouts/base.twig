	<body class="{{body_class}}">
    <a class="sr-only sr-only-focusable" href="#content">Skip to content</a>
		
		<nav class="navbar navbar-expand-lg layout-header sticky-top">
			<div class="container">
				<a class="navbar-brand" href="{{ site.home_url }}" aria-label="go to homepage"><img src="{{ logo.src }}" alt="{{ site.name}}" width="444" height="107" /></a>
				<label for="nav-toggle-status" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle Navigation">
					<svg viewBox="0 0 100 80" width="30" height="30">
						<rect width="100" height="10"></rect>
						<rect y="30" width="100" height="10"></rect>
						<rect y="60" width="100" height="10"></rect>
					</svg>
				</label>
				<input id="nav-toggle-status" name="nav-toggle-status" type="checkbox"/>
				<div class="collapse navbar-collapse justify-content-end">
					<ul class="navbar-nav">
						{% for item in menu.items %}
							<li class="nav-item {{ item.classes|join(' ') }}">
								<a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</nav>

		{% block page %}
			Page not built yet and is missing content
		{% endblock %}
    
    <footer class="layout-footer">
			<div class="wrapper">
				<nav class="footer container">
					<ul class="row list-unstyled">
						<li>&copy; {{ "now"|date('Y') }} {{ copyright }}</li>
						{% for item in menu_footer.items %}
							<li class="{{ item.classes|join(' ') }}">
								<a href="{{ item.link }}">{{ item.title }}</a>
							</li>
						{% endfor %}
					</ul>
				</nav>
			</div>
    </footer>

    {{ function('wp_footer') }}

