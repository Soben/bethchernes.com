<nav class="pagination" aria-label="Pagination Navigation">
	<ul class="d-flex list-unstyled justify-content-center">
    {% if posts.pagination.prev %}
      <li><a href="{{posts.pagination.prev.link}}" class="page-number page-prev {{posts.pagination.prev.link|length ? '' : 'invisible'}}">Prev</a></li>
    {% endif %}
		{% for page in posts.pagination.pages %}
			<li>
				{% if page.link %}
					<a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
				{% else %}
					<span class="{{page.class}}">{{page.title}}</span>
				{% endif %}
			</li>
		{% endfor %}
    {% if posts.pagination.next %}
      <li><a href="{{posts.pagination.next.link}}" class="page-number page-next {{posts.pagination.next.link|length ? '' : 'invisible'}}">Next</a></li>
    {% endif %}
	</ul>
</nav>