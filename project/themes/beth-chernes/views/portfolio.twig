{% extends "layouts/base.twig" %}

{% block page %}
    {% include "partials/masthead.twig" with {
      'header': headerTitle
    } %}

    <main id="content" class="content-wrapper">
      
      <section class="archive-block">
        <div class="container {% if sidebar %}has-sidebar{% endif %}">
          <div class="row">
            <div class="column-main {% if sidebar %}col-md-7 col-lg-8{% else %}col-12{% endif %}">
              {% for post in posts %}
                {% include 'partials/content/post.twig' with {
                  'details' : post,
                  'imageDimensions' : [ 750, 450 ],
                  'showMeta' : true,
                } %}
              {% endfor %}

              {% include "partials/content/pagination.twig" %}
            </div>

            {{ sidebar }}
          </div>
        </div>
      </section>

    </main>
{% endblock %}